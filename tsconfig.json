{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["@webgpu/types"],
    "outDir": "./dist/esnext",
    "declaration": true,
    "declarationDir": "./dist/esnext"
  },
  "include": ["src"]
}
